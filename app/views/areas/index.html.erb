<div class="right-area w-100 d-flex flex-column">
  <%= image_tag "logo.png", class:"right-area__head w-100 h-25" %>
  <div class="right-area__body d-flex flex-column align-items-center p-3 bg-white h-75 mb-5">
    <h1 class="mb-5">Areas</h1>
    <div class="right-area__body__areas w-100 h-100 p-5 d-flex align-items-center justify-content-center flex-wrap">
      <% @areas.each do |area| %>
        <!--20210314便宜的に要素を背景色で区別するために使う-->
        <% id_string = area.id.to_s %>
        <div class="right-area__body__areas__area h-25 d-flex p-1 border m-1" id="area-<%= area.id %>" style="background-color: #<%= id_string + id_string + id_string %>fff">
          <%= link_to area_path(area.id) do %>
          <div class="right-area__body__areas__area__detail h-100 w-100 text-center">
            <p class="mt-3 h3">
              <%= area.detail %>
            </p>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>