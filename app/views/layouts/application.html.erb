          <a class="navbar-brand w-100" href="/">
            <!--20210311assets/images/logo.pngはダメというルール-->
            <img src="assets/logo.png" class="navbar-brand__logo-picture"></img>
          </a>
          <!--20210310list-groupもbootstrap-->
          <ul class="list-group mt-5 w-100 text-center pr-2 pl-0">
            <a href="about">
              <li class="list-group-item h2">About</li>
            </a>
            <a href="#">
              <li class="list-group-item h2">Summary</li>
            </a>
            <a href="#">
              <li class="list-group-item h2">Animals</li>
            </a>
            <a href="#">
              <li class="list-group-item h2">Access</li>
            </a>
          </ul>
        </nav>
      </div>
      <%= yield %>
    </main>
    <footer class="bg-dark text-white text-center mt-auto pt-5">
      <a href="/" class="text-white">
        <p>20210311Test-Bootstrap by RubyOnRails</p>
      </a>
    </footer>
  </body>
</html>
